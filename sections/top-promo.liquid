{%- if section.settings.tpro_use -%}
<div class="tpro-wrapper{% unless section.settings.tpro_mobile %} row hidden-xs{% endunless %}"> 
  <div class="standard-body">
    <div class="full-width">
      <div class="container">
        <div class="tpro row">
          {%- if section.settings.tpro_cls == '1' -%}
          {%- assign _colClass = 'col-sm-12' -%}
          {%- elsif section.settings.tpro_cls == '2' -%}
          {%- assign _colClass = 'col-sm-6' -%}
          {%- else -%}
          {%- assign _colClass = 'col-sm-4' -%}
          {%- endif -%}
          <div class="{{_colClass}}{% unless section.settings.tpro_cls == '3' %} text-center{% endunless %}">
            <div class="background">
              {%- if section.settings.tpro_img_use_1 -%}
              <img src="{{ section.settings.tpro_img_1.png | img_url }}" alt="{{ section.settings.tpro_text_1 | strip_html }}" />
              {%- endif -%}
              <p>{{section.settings.tpro_text_1}}</p>
            </div>
          </div>
          {%- if section.settings.tpro_cls == '2' or section.settings.tpro_cls == '3' -%}
          <div class="{{_colClass}} text-center">
            <div class="background">
              {%- if section.settings.tpro_img_use_2 -%}
              <img src="{{ section.settings.tpro_img_2 | img_url }}" alt="{{ section.settings.tpro_text_2 | strip_html }}" />
              {%- endif -%}
              <p>{{section.settings.tpro_text_2}}</p>
            </div>
          </div>
          {%- endif -%}
          {%- if section.settings.tpro_cls == '3' -%}
          <div class="{{_colClass}} text-right">
            <div class="background">
              {%- if section.settings.tpro_img_use_3 -%}
              <img src="{{ section.settings.tpro_img_3.png | img_url }}" alt="{{ section.settings.tpro_text_3 | strip_html }}" />
              {%- endif -%}
              <p>{{section.settings.tpro_text_3}}</p>
            </div>
          </div>
          {%- endif -%}
        </div>
      </div>
    </div>
  </div>
</div>
{%- endif -%}
<style>
  .tpro-wrapper {
    background-color:{{section.settings.tpro_bgcolor}};
  }
{% if settings.tpro_sep == '1' %}
.tpro:before {
  display: block;
  content: '';
  position: absolute;
  top: 19.5px;
  left: 15px;
  right: 15px;
  height: 1px;
  background: {{section.settings.tpro_sepcolor}};
  z-index: 0;
}
.tpro .background:before {
  display: block;
  content: '';
  position: absolute;
  top: 19.5px;
  left: -3px;
  right: -3px;
  height: 1px;
  background: {{section.settings.tpro_bgcolor}};
  z-index: -1;
}
{% elsif settings.tpro_sep == '2' %}
.tpro > div:before {
  content: '';
  position: absolute;
  width: 5px;
  height: 5px;
  top: 17.5px;
  left: -2px;
  background: {{section.settings.tpro_sepcolor}};
}
.tpro > div:first-child:before {
  display: none;
}
{% endif %}
.tpro .background p {
  vertical-align: top;
  display: inline-block;
  padding: 7px 0px 0px 0px;
  margin: 0px;
  font-size: 12px;
  color: {{section.settings.tpro_textcolor}};
}
</style>
